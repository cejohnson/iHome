<h1>Listing residences</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @residences.each do |residence| %>
    <tr>
      <td><%= residence.name %></td>
      <td><%= link_to 'Show', residence %></td>
      <td><%= link_to 'Edit', edit_residence_path(residence) %></td>
      <td><%= link_to 'Destroy', residence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td>
        <% if current_residence.eql? residence %>
          <div>Active Residence</div>
        <% else %>
          <%= button_to 'Change To Active Residence', set_active_residence_path(residence.id) %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Residence', new_residence_path %>
